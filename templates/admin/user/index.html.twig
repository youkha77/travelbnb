{% extends 'admin/base.html.twig' %}

{% block title %}nos utilisateurs!{% endblock %}

{% block body %}
<div class="container-fluid">
        <h1 class="my-5">Nos utilisateurs</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    
                    <td>
                        <img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar avatar-micro mr-2">
                        {{user.fullName}}
                    </td>
                    
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
